@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "TextBoxes";

    // the processing of tgis page is physically done from top to bottom

    // capture the incoming  "post" method data
    // all data coming in will be strings
    // if a form control does not exist, the value null is returned
    // if a form control does exist, then the asociated data is returned
    // for a textbox control the data is the entered data
    // for a form submit button, the data is the value assigned to the value paramater.
    var leftside = Request.Form["inputleft"];
    var rightside = Request.Form["inputright"];
    var thebutton = Request.Form["formbutton"];

}

@section banner{
    <h1>TextBoxes</h1>
}

<!-- this html will appear in the render body of the layout page -->

@if (IsPost)
{

    // Which form button is pressed
    if (thebutton.Equals("left"))
    {
        <p>Your name is @leftside</p>
    }
    else if (thebutton.Equals("right"))
    {
        <p>Your favourite color is @rightside</p>
    }
    else
    {
        leftside = null;
        rightside = null;
    }

}
else
{
    <p>You have not yet sent this form back. IsPost = false</p>
}

<form id="theform" method="post">

    <div class="row">
        <div class="col-md-6">
            <label for="inputleft">Left</label>
            <!-- id is for browser, name is for server-->
            <input type="text" id="inputleft" name="inputleft" placeholder="enter your name" value="@leftside" />
            <button type="submit" id="formbutton" name="formbutton" class="btn" value="left">Press Left</button>
        </div>
        <div class="col-md-6">
            <label for="inputright">Right</label>
            <input type="text" id="inputright" name="inputright" placeholder="enter your favorite colour" value="@rightside" />
            <button type="submit" id="formbutton" name="formbutton" class="btn" value="right">Press Right</button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-offset-5">
            Reset On Server
            <button type="submit" id="formbutton" name="formbutton" class="btn" value="reset">Reset On Client</button>
        </div>
    </div>

</form>

