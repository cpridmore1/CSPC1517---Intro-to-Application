@{
    Layout = "~/_Layout.cshtml";
}

@section head{
    <link href="~/Content/MyCustomStyles.css" rel="stylesheet" />
}

@section banner{
    <h1>DropDownList (select tag)</h1>
}

@if(IsPost)
{
    var choice = Request.Form["pageselection"];

    switch (choice.ToUpper())
    {
        case "TEXTBOXES":
            {
                //to redirect yourself to another page you use the response.Redirect command. This command needs the destination page as an argument value. 
                //as an argument value:
                //use relative addressing to get to your destination page
                Response.Redirect("TextBoxes.cshtml");
                break;
            }
        case "RADIOBUTTONS":
            {
                Response.Redirect("RadioButtons.cshtml");
                break;
            }
        case "CHECKBOXES":
            {
                Response.Redirect("CheckBoxes.cshtml");
                break;
            }

        default:
            {
                <p>><span style="color:firebrick"><strong>Make a choice</strong></span></p>
                break;
            }

    }

}

<form id="theform" method="post">
    <div class="row">
        <div class="col-md-offset-4">

            <label for="pageselection">Select sample page:</label>
            &nbsp; &nbsp;

            <!-- The select tage is used for a dropdown list .
    Each item in the list is set up using the option tag.
    A data value is accositated with the list item by using the value attribute-->
            <select id="pageselection" name="pageselection">
                <option value="">select ...</option>
                <option value="TextBoxes">TextBoxes</option>
                <option value="RadioButtons">RadioButtons</option>
                <option value="CheckBoxes">CheckBoxes</option>
            </select>

            &nbsp; &nbsp;

            <button type="submit" id="formbutton" name="formbutton" class="btn btn-primary" value="submit">Go to ...</button>

        </div>
    </div>
</form>
